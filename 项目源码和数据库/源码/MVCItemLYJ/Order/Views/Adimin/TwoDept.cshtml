
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>首页</title>
    <link href="http://cdn.bootcss.com/highlight.js/8.0/styles/monokai_sublime.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/heightlength.css">
    <link rel="stylesheet" href="../css/mxjs.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @{
        List<Dept> dept2 = ViewBag.dept2 as List<Dept>;
    }
    <style type="text/css">
        .breadcrumb li a {
            color: white;
        }
    </style>
</head>
@using Order.Models;
@model List<Dept>
<body style="background-color:white;">

    <div class="container">
        <div class="jsbg" style="margin-top:-15px;">
            <ul class="breadcrumb" style="background-color:#566374;" >
                <li><a href="#">科室管理</a></li>
                <li><a href="#">二级科室</a></li>
            </ul>
            <div class="col-lg-12 mxlength" style="border:5px dashed #516877;background-color:white;height:600px;position:relative;">

                <div style="margin-top:15px;display:flex;width:500px;">
                    <form class="form-inline" action="" method="post">
                        <label for="ANmae" style="color:black;">科室名：</label>
                        <input type="text" name="Nmae" id="Nmae" class="form-control" placeholder="请输科室名" />
                        <input type="submit" value="查询" class="btn btn-success" />
                    </form>
                    <a href="" class="btn btn-info" data-toggle="modal" data-target="#exampleModal" style="margin-left:20px;">添加</a>
                </div>

                <table class="table table-bordered table-hover" style="background-color: white; margin-top: 20px;">
                    <thead class="bg-success text-white">
                        <tr>
                            <th>编号</th>
                            <th>科室名</th>
                            <th>描述</th>
                            <th>一级科室</th>
                            <th>科室医生</th>
                            <th>修改</th>
                            <th>删除</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Did</td>
                            <td>@item.Dname</td>
                            <td>@item.Dspec</td>
                            <td>@item.Dept2.Dname</td>
                            <td>
                                @foreach (var item1 in item.Mediciner.Where(p => p.Did == item.Did))
                                {
                                    @item1.Mname<br />
                                }
                            </td>

                            <td><a href="/Adimin/EditTwoDept/@item.Did" class="btn btn-info">修改</a></td>
                            <td><a href="/Adimin/DeleteTwoDept/@item.Did" class="btn btn-danger" onclick="return confirm('您确定要删除 @item.Dname 的信息吗？')">删除</a></td>
                        </tr>
                    }
                </table>
                @*分页*@
                <div style="        position: absolute;
        top: 500px;
        height: auto;
        width: 1100px;">
                    <div classs="row">
                        <div class="col-lg-8">
                            <label style="color:black;">总共 @ViewBag.totalCount 行</label>
                            <select onchange="window.location = this.value;">
                                @{
                                    int[] count = new[] { 2, 3, 4, 5 };
                                }
                                @foreach (var item in count)
                                {
                                    if (item.Equals(ViewBag.pageCount))
                                    {
                                        <option value="/Adimin/TwoDept?pageIndex=@ViewBag.pageIndex&pageCount=@item" selected>@item</option>
                                    }
                                    else
                                    {
                                        <option value="/Adimin/TwoDept?pageIndex=@ViewBag.pageIndex&pageCount=@item">@item</option>
                                    }

                                }
                            </select>
                        </div>
                        <div class="col-lg-4">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link" href="/Adimin/TwoDept?pageIndex=1&pageCount=@ViewBag.pageCount">首页</a></li>

                                    @if (@ViewBag.pageIndex > 1)
                                    {
                                        <li class="page-item"><a class="page-link" href="/Adimin/TwoDept?pageIndex=@(ViewBag.pageIndex-1)&pageCount=@ViewBag.pageCount">上一页</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item disabled"><a class="page-link" href="#">上一页</a></li>
                                    }

                                    <li class="page-item"><a class="page-link" href="#">@ViewBag.pageIndex</a></li>

                                    @if (@ViewBag.pageIndex < @ViewBag.totalPage)
                                    {
                                        <li class="page-item"><a class="page-link" href="/Adimin/TwoDept?pageIndex=@(ViewBag.pageIndex+1)&pageCount=@ViewBag.pageCount">下一页</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item disabled"><a class="page-link" href="#">下一页</a></li>
                                    }

                                    <li class="page-item"><a class="page-link" href="/Adimin/TwoDept?pageIndex=@ViewBag.totalPage&pageCount=@ViewBag.pageCount">末页</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                </div>@*分页尾*@


            </div>
        </div>
    </div>
    <script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/highlight.js/8.0/highlight.min.js"></script>
    <script src="../js/smoothscroll.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    <script src="../js/mking.js"></script>
</body>
</html>


@*添加二级科室*@
<div class="modal fade" id="exampleModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">添加二级科室</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Adimin/AddTwoDept" method="post" id="form1" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Dname" class="col-form-label">名称:</label>
                        <input type="text" class="form-control" id="Dname" name="Dname">
                    </div>
                    <div class="form-group">
                        <label for="Dspec" class="col-form-label">描述:</label>
                        <input type="text" class="form-control" id="Dspec" name="Dspec">
                    </div>
                    <div class="form-group">
                        <label for="Dspec" class="col-form-label">一级科室:</label>
                        <select name="Pdid" id="Pdid" class="form-control">
                            @foreach (var item in dept2.Where(p=>p.Pdid==null))
                            {
                                <option value="@item.Did" selected>@item.Dname</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                @ViewBag.Message
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                <button type="submit" class="btn btn-primary" id="save">提交</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#save").click(function () {
        $("#form1").submit();
    })
</script>