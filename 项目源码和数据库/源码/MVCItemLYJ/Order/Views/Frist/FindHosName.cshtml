
@{
    Layout = null;
}

@using Order.Models;
@{
    List<Hospital> hos = ViewBag.hos as List<Hospital>;
}
@{
    User user = Session["user"] as User;
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HosMed</title>
    <link href="~/Content/Hand.css" rel="stylesheet" />
    <style type="text/css">
        .A1 p {
            margin-top: 1px;
            text-align: center;
        }

            .A1 p a {
                height: 25px;
                line-height: 15px;
                width: 89px;
            }
    </style>
</head>
<body style="margin:0;padding:0px">

    @*灰色登录条*@
    <div class="gh-nav">
        <div class="container g-clear">
            <div class="g-left" id="">
                <span class="text">@user.Uname 您好！</span>
                <a href="/Users/Logout">退出</a>
            </div>


            <div class="g-right">

                <a href="text">
                    下载APP
                    <span>
                        <img src="https://static.guahao.cn/front/portal-pc-static/img/index-appQRcode.png?v=20170505" alt="" style="display: none;">
                    </span>
                </a>
                <span class="line">|</span>
                <a href="">快速取消预约</a>
                <span class="line">|</span>
                <a href="">客服中心</a>
                <span class="line">|</span>
                <a href="">微医云</a>
                <span class="line">|</span>
                <a href="">药品信息</a>
            </div>
        </div>
    </div>
    <div style="margin-left:50px;">
        <img src="~/Content/Images/标志.jpg" />
    </div>
    <div style="height:5px;background-color:#2B73CC"></div>
    <div style="width:80%;margin:0 auto;height:600px;margin-top:20px;">
        <div style="height:35px;background-color:#F8F8F8;line-height:35px;">
            <a href="/Frist/Main" style="color: #2B73CC;text-decoration: none;margin-left:15px;font-size: 14px;">首页</a><lable>></lable><a href="/Frist/MoreHos" style="color: #2B73CC;text-decoration: none;font-size: 14px;">更多医院</a>

        </div>
        <div style="height:5px;background-color:#69B72F"></div>

    </div>
    <div id="myTabContent" class="tab-content table-bordered" style="border-top:none;border:1px solid #DCDDDC;margin:0 auto;margin-top:-500px;height:auto;width:80%;box-shadow:1px 1px 5px #888888;margin-bottom:20px;">
        <div class="tab-pane fade in active" id="change" style="display:flex;flex-flow:wrap;height:auto;">

            @foreach (var item in hos)
            {
                <div class="row">
                    <div class="col-sm-5 col-md-12">
                        <div class="thumbnail" style="margin-left: 15px; margin-right: 15px;">
                            @if (item.HImage == "" || item.HImage == null)
                            {
                                <img src="~/Content/Images/医院默认图.jpg" style="width:242px;height:200px" />
                            }
                            else
                            {
                                <img src="~/Content/HosImage/@item.HImage" style="width:242px;height:200px" />
                            }
                            <div class="caption">
                                <label style="font-size:16px;">@item.Hname</label><br />
                                <label style="font-size:14px">@item.Grade</label><label style="font-size:12px; font-weight:normal;">(医院)</label>
                                <p><a href="/Frist/HosMed/@item.Hid" class="btn btn-primary" role="button">进入</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    <div id="footer">
        <div id="button">
            <ul>
                <li><a href="#">服务条款</a></li>
                <li>丨</li>
                <li><a href="#">隐私政策</a></li>
                <li>丨</li>
                <li><a href="#">儿童政策</a></li>
                <li>丨</li>
                <li><a href="#">意见反馈</a></li>
                <li>丨</li>
                <li><a href="#">投诉</a></li>
            </ul>
            <div class="number">快医公司版权所有©199X-20X9XXXX科技有限公司运营：浙网文[20XX]3X0X-X6X号</div>
            <div class="report">违法和不良信息举报电话：0xx1-xx3xx5x6 举报邮箱：1373xxxxxx@qq.com </div>
        </div>
    </div>


</body>
</html>


<script type="text/javascript">
    $(".A").click(function () {
        $(this).parent().parent().parent().parent().siblings(".A1").show();
    })
    $(".A2").click(function () {
        $(this).parent(".A1").hide();
    })

    $(".Q").click(function () {
        $(this).parent().parent().parent().parent().siblings(".Ques").show();
    })
    $(".A6").click(function () {
        $(this).parent(".Ques").hide();
    })
    $("#save").click(function () {
        $("#form1").submit();
    })
</script>
